<layout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <Button
                android:id="@+id/java_sample_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Java Sample" />

            <Button
                android:id="@+id/kotlin_sample_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kotlin Sample" />

            <Button
                android:id="@+id/sdk_actions_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SDK Actions" />

            <Button
                android:id="@+id/compose_sample_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Compose Sample" />

            <Button
                android:id="@+id/coroutine_sample_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Coroutine Sample" />

            <Button
                android:id="@+id/livedata_sample_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LiveData Sample" />
        </LinearLayout>
    </ScrollView>

</layout>